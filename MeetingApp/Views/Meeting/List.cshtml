@model List<UserInfo>

@{
    ViewBag.Title = "Toplantı Katılım Listesi";
    Layout = "_Layout2";
}
<main class="text-center">
    <h4>Toplantı Katılım Listesi</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Ad</td>
                <td>Katılım Durumu</td>
                <td>Detay</td>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
            }
            @foreach (var item in Model)
            {
                var durum = item.WillAttend == true ? "Evet" : "Hayır";
                var className = item.WillAttend == true ? "table-success" : "table-danger";

                if (item.WillAttend == true)
                {
                    i++;
                }

                <tr class="@className">
                    <td>@item.Name</td>
                    <td>@durum</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="/meeting/details/@item.Id">Detay</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="card">
        <div class="card-body">
            <span>Katılımcı sayısı: @i</span>
        </div>
    </div>
</main>